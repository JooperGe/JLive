<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 导航标题栏 -->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/main"
        android:padding="10px">

        <ImageView
            android:id="@+id/my_iv_xiugai"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="25px"
            android:src="@mipmap/eidt" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/iv_hot_private_chat"
            android:layout_width="80px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="30px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/sixinchat" />

            <ImageView
                android:id="@+id/iv_private_chat_user"
                android:layout_width="100px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:padding="25px"
                android:src="@mipmap/sixinchat"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/tab_new_indicator"
                android:layout_width="20px"
                android:layout_height="20px"
                android:contentDescription="@string/empty"
                android:src="@drawable/nim_main_tab_new_message_notify"
                android:visibility="gone" />

            <com.netease.nim.uikit.common.ui.drop.DropFake
                android:id="@+id/tab_new_msg_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginRight="20px"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:visibility="visible" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/main">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/top"
            android:layout_width="165px"
            android:layout_height="140px"
            android:layout_centerInParent="true"
            android:background="@color/main">

            <com.lvshandian.partylive.widget.AvatarView
                android:id="@+id/my_head"
                android:layout_width="140px"
                android:layout_height="140px"
                android:layout_centerInParent="true"
                android:src="@mipmap/app_icon" />

            <ImageView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/nv" />

            <ImageView
                android:id="@+id/denhgji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/rank_1" />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/main"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:text="昵称:阿楠"
            android:textColor="@color/white"
            android:textSize="34px" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="ID:666"
            android:textColor="@color/white"
            android:textSize="34px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/main"
        android:gravity="center"
        android:paddingTop="30px"
        android:textColor="@color/white" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/main"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="25px"
        android:paddingTop="50px">

        <TextView
            android:id="@+id/fanse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25px"
            android:text="粉丝 0"
            android:textColor="@color/white"
            android:textSize="34px" />

        <TextView
            android:id="@+id/attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:text="关注 0"
            android:textColor="@color/white"
            android:textSize="34px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.lvshandian.partylive.widget.PagerSlidingTabStrip
        android:id="@+id/my_tabs"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/cccccccolor">

    </com.lvshandian.partylive.widget.PagerSlidingTabStrip>

    <android.support.v4.view.ViewPager

        android:id="@+id/my_vierpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</com.zhy.autolayout.AutoLinearLayout>